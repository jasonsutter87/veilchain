# VeilChain API Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Authentication (optional)
# Generate a secure key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY=

# CORS Configuration
CORS=true

# Logging
LOGGING=true
NODE_ENV=development

# =============================================================
# Phase 2: Storage Backend Configuration
# =============================================================

# PostgreSQL Database
# Use DATABASE_URL or individual connection parameters
DATABASE_URL=postgresql://veilchain:veilchain_dev@localhost:5432/veilchain
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DATABASE=veilchain
# POSTGRES_USER=veilchain
# POSTGRES_PASSWORD=veilchain_dev
# POSTGRES_MAX_CONNECTIONS=20
# POSTGRES_IDLE_TIMEOUT=30000

# Redis Cache
REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# MinIO/S3 Blob Storage
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=veilchain
S3_ACCESS_KEY_ID=veilchain
S3_SECRET_ACCESS_KEY=veilchain_dev
S3_FORCE_PATH_STYLE=true
# S3_REGION=us-east-1
