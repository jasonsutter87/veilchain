{
  "name": "@veilchain/sdk",
  "version": "0.1.0",
  "description": "Official JavaScript/TypeScript SDK for VeilChain - Append-only Merkle tree ledger service",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./verify": {
      "types": "./dist/verify.d.ts",
      "import": "./dist/verify.mjs",
      "require": "./dist/verify.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/verify.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/verify.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "veilchain",
    "merkle",
    "ledger",
    "append-only",
    "blockchain",
    "audit",
    "verification",
    "cryptography"
  ],
  "author": "VeilChain",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/veilchain/veilchain"
  },
  "homepage": "https://veilchain.io",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.7.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
