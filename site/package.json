{
  "name": "2025hugostarter",
  "version": "1.0.0",
  "description": "Hugo starter with Tailwind + SCSS + Bootstrap compatibility",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run watch:scss\" \"npm run watch:scss:pages\" \"npm run watch:css\" \"npm run watch:css:pages\" \"hugo server\"",
    "build": "npm run build:scss && npm run build:scss:pages && npm run build:css && npm run build:css:pages && hugo --gc --minify",

    "build:scss": "sass assets/scss/main.scss assets/css/main.css --no-source-map",
    "build:scss:pages": "sass assets/scss/pages:assets/css/pages --no-source-map",
    "watch:scss": "sass assets/scss/main.scss assets/css/main.css --watch",
    "watch:scss:pages": "sass assets/scss/pages:assets/css/pages --watch",

    "build:css": "postcss assets/css/main.css -o static/css/main.css",
    "build:css:pages": "postcss assets/css/pages/*.css --dir static/css/pages --base assets/css/pages",
    "watch:css": "postcss assets/css/main.css -o static/css/main.css --watch",
    "watch:css:pages": "postcss assets/css/pages/*.css --dir static/css/pages --base assets/css/pages --watch",

    "css:rebuild": "npm run build:scss && npm run build:scss:pages && npm run build:css && npm run build:css:pages"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GROWDND/2025HugoStarter.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/GROWDND/2025HugoStarter/issues"
  },
  "homepage": "https://github.com/GROWDND/2025HugoStarter#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "glob": "^13.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.96.0",
    "tailwindcss": "^3.4.19"
  }
}
